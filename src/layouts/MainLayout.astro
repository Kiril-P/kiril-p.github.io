</html>

<script>
	import Lenis from 'lenis';
	import { gsap } from 'gsap';
	import { ScrollTrigger } from 'gsap/ScrollTrigger';

	// Register GSAP plugins
	gsap.registerPlugin(ScrollTrigger);

	// Initialize Lenis smooth scrolling
	const lenis = new Lenis({
		duration: 0.7, // Further reduced for a more native feel
		easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)), 
		orientation: 'vertical',
		gestureOrientation: 'vertical',
		smoothWheel: true,
		wheelMultiplier: 0.9, // Lower multiplier reduces the "travel" distance per scroll
		smoothTouch: false,
		touchMultiplier: 3.0,
		infinite: false,
	});

	// Integrate Lenis with GSAP ScrollTrigger
	lenis.on('scroll', ScrollTrigger.update);

	// Use GSAP ticker for smooth integration
	gsap.ticker.add((time) => {
		lenis.raf(time * 1000);
	});

	// Disable lag smoothing for better performance
	gsap.ticker.lagSmoothing(0);

	// Optional: Stop Lenis when GSAP animations are running
	// This prevents conflicts during ScrollTrigger animations
	lenis.on('scroll', ({ scroll, limit, velocity, direction, progress }) => {
		// You can add custom scroll callbacks here if needed
	});
</script>

<style is:global>
	:root {
		--accent: 255, 255, 255;
	}
	html {
		font-family: 'Inter', system-ui, sans-serif;
		/* Removed scroll-behavior: smooth - Lenis handles this now */
	}
	html.lenis {
		height: auto;
	}
	.lenis.lenis-smooth {
		scroll-behavior: auto;
	}
	.lenis.lenis-smooth [data-lenis-prevent] {
		overscroll-behavior: contain;
	}
	.lenis.lenis-stopped {
		overflow: hidden;
	}
	.lenis.lenis-scrolling iframe {
		pointer-events: none;
	}
</style>
