---
import MagneticButton from './MagneticButton';

const currentYear = new Date().getFullYear();
---

<footer class="relative border-t border-white/5 bg-premium-gray/50 backdrop-blur-sm mt-24">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- About Column -->
      <div>
        <h3 class="text-lg font-bold mb-4">Kiril Petrovski</h3>
        <p class="text-sm text-white/50 leading-relaxed">
          Full-stack developer specializing in cloud solutions. CS & AI student at IE University, Madrid. Building scalable applications on AWS, Azure, and Google Cloud.
        </p>
      </div>

      <!-- Quick Links Column -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white/70 mb-4">Quick Links</h3>
        <div class="flex flex-col gap-2">
          <a href="/#projects" class="text-sm text-white/50 hover:text-blue-accent transition-colors duration-300">
            Projects
          </a>
          <a href="/#about" class="text-sm text-white/50 hover:text-blue-accent transition-colors duration-300">
            About
          </a>
          <a href="/#tech-stack" class="text-sm text-white/50 hover:text-blue-accent transition-colors duration-300">
            Tech Stack
          </a>
          <a href="/#contact" class="text-sm text-white/50 hover:text-blue-accent transition-colors duration-300">
            Contact
          </a>
        </div>
      </div>

      <!-- Connect Column -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white/70 mb-4">Connect</h3>
        <div class="flex gap-4">
          <MagneticButton
            client:visible
            href="https://github.com/kiril-p"
            className="footer-icon flex items-center justify-center w-10 h-10 rounded-lg bg-white/5 border border-white/10 text-white/70 hover:border-blue-accent/40 hover:text-blue-accent transition-all duration-300"
            strength={0.3}
            ariaLabel="GitHub profile"
            title="GitHub profile"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
          </MagneticButton>
          
          <MagneticButton
            client:visible
            href="https://linkedin.com/in/kiril-petrovski"
            className="footer-icon flex items-center justify-center w-10 h-10 rounded-lg bg-white/5 border border-white/10 text-white/70 hover:border-blue-accent/40 hover:text-blue-accent transition-all duration-300"
            strength={0.3}
            ariaLabel="LinkedIn profile"
            title="LinkedIn profile"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </MagneticButton>
          
          <MagneticButton
            client:visible
            href="https://kirilp.itch.io/"
            className="footer-icon flex items-center justify-center w-10 h-10 rounded-lg bg-white/5 border border-white/10 text-white/70 hover:border-blue-accent/40 hover:text-blue-accent transition-all duration-300"
            strength={0.3}
            ariaLabel="Itch.io profile"
            title="Itch.io profile"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="3" width="20" height="14" rx="2"></rect>
              <path d="M8 21h8"></path>
              <path d="M12 17v4"></path>
              <path d="m9 8 3 3 3-3"></path>
            </svg>
          </MagneticButton>
          
          <MagneticButton
            client:visible
            href="mailto:kirilpetrovski2005@gmail.com"
            className="footer-icon flex items-center justify-center w-10 h-10 rounded-lg bg-white/5 border border-white/10 text-white/70 hover:border-blue-accent/40 hover:text-blue-accent transition-all duration-300"
            strength={0.3}
            ariaLabel="Send email"
            title="Send email"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="4" width="20" height="16" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
          </MagneticButton>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-white/50">
        Â© {currentYear} Kiril Petrovski. All rights reserved.
      </p>
      
      <!-- Back to Top Button -->
      <button 
        id="back-to-top"
        class="flex items-center gap-2 text-sm text-white/50 hover:text-blue-accent transition-colors duration-300 group"
        aria-label="Back to top"
      >
        <span>Back to top</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:-translate-y-1 transition-transform duration-300">
          <polyline points="18 15 12 9 6 15"></polyline>
        </svg>
      </button>
    </div>
  </div>
</footer>

<script>
  // Back to top functionality
  const backToTopBtn = document.getElementById('back-to-top');
  
  backToTopBtn?.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });
</script>
