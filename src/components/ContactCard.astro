---
import MagneticButton from './MagneticButton';
import { Mail } from 'lucide-react';

interface Props {
  email?: string;
  linkedin?: string;
  github?: string;
  itch?: string;
  resume?: string;
}

const { 
  email = "kiril@example.com",
  linkedin = "https://linkedin.com/in/kiril-petrovski",
  github = "https://github.com/kiril-p",
  itch = "https://kirilp.itch.io/",
  resume = "#" 
} = Astro.props;
---

<div class="contact-card group relative overflow-hidden rounded-3xl bg-premium-gray border border-white/5 p-8 transition-all duration-500 hover:border-blue-accent/40 h-full flex flex-col">
  <!-- Gradient overlay on hover -->
  <div class="gradient-overlay absolute inset-0 bg-gradient-to-br from-blue-accent/0 to-blue-accent/10 opacity-0 transition-opacity duration-700"></div>
  
  <!-- Border glow effect -->
  <div class="border-glow absolute inset-0 rounded-3xl opacity-0 transition-opacity duration-500" style="box-shadow: 0 0 50px rgba(59, 130, 246, 0.2);"></div>

  <div class="relative z-10 flex flex-col h-full">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-2 mb-2">
        <Mail className="w-6 h-6 text-blue-accent" />
        <h3 class="text-2xl font-bold group-hover:text-blue-accent transition-colors duration-300">Get in Touch</h3>
      </div>
      <p class="text-sm text-white/50">Let's connect</p>
    </div>

    <!-- Contact Links -->
    <div class="flex-1 flex flex-col gap-6">
      <!-- Email with Magnetic Effect -->
      <button 
        class="email-magnetic contact-link group/link w-full flex items-center gap-4 p-3 rounded-2xl bg-white/5 border border-white/10 hover:border-blue-accent/40 hover:bg-blue-accent/10 transition-all duration-300"
        onclick="navigator.clipboard.writeText(this.querySelector('.email-text').textContent); this.querySelector('.copy-feedback').classList.add('show')"
        data-magnetic="true"
      >
        <div class="icon-wrapper flex items-center justify-center w-10 h-10 rounded-xl bg-blue-accent/10 group-hover/link:bg-blue-accent/20 transition-colors duration-300 flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-accent">
            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
          </svg>
        </div>
        <div class="flex-1 text-left min-w-0">
          <div class="text-xs text-white/50 uppercase tracking-wider mb-1">Email</div>
          <div class="email-text text-sm text-white/90 group-hover/link:text-blue-accent transition-colors duration-300 truncate">{email}</div>
          <div class="copy-feedback text-xs text-blue-accent opacity-0 transition-opacity duration-300 mt-1">Copied!</div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/30 group-hover/link:text-blue-accent group-hover/link:translate-x-1 transition-all duration-300 flex-shrink-0">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
      </button>

      <!-- LinkedIn with Magnetic Effect -->
      <MagneticButton
        client:visible
        href={linkedin}
        className="contact-link group/link w-full flex items-center gap-4 p-3 rounded-2xl bg-white/5 border border-white/10 hover:border-blue-accent/40 hover:bg-blue-accent/10 transition-all duration-300"
        strength={0.25}
        ariaLabel="LinkedIn profile"
        title="LinkedIn profile"
        target="_blank"
        rel="noopener noreferrer"
      >
        <div class="icon-wrapper flex items-center justify-center w-10 h-10 rounded-xl bg-blue-accent/10 group-hover/link:bg-blue-accent/20 transition-colors duration-300 flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-accent">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </div>
        <div class="flex-1 text-left min-w-0">
          <div class="text-xs text-white/50 uppercase tracking-wider mb-1">LinkedIn</div>
          <div class="text-sm text-white/90 group-hover/link:text-blue-accent transition-colors duration-300">Connect</div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/30 group-hover/link:text-blue-accent group-hover/link:translate-x-1 transition-all duration-300 flex-shrink-0">
          <line x1="7" y1="17" x2="17" y2="7"></line>
          <polyline points="7 7 17 7 17 17"></polyline>
        </svg>
      </MagneticButton>

      <!-- GitHub with Magnetic Effect -->
      <MagneticButton
        client:visible
        href={github}
        className="contact-link group/link w-full flex items-center gap-4 p-3 rounded-2xl bg-white/5 border border-white/10 hover:border-blue-accent/40 hover:bg-blue-accent/10 transition-all duration-300"
        strength={0.25}
        ariaLabel="GitHub profile"
        title="GitHub profile"
        target="_blank"
        rel="noopener noreferrer"
      >
        <div class="icon-wrapper flex items-center justify-center w-10 h-10 rounded-xl bg-blue-accent/10 group-hover/link:bg-blue-accent/20 transition-colors duration-300 flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-accent">
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
            <path d="M9 18c-4.51 2-5-2-7-2"></path>
          </svg>
        </div>
        <div class="flex-1 text-left min-w-0">
          <div class="text-xs text-white/50 uppercase tracking-wider mb-1">GitHub</div>
          <div class="text-sm text-white/90 group-hover/link:text-blue-accent transition-colors duration-300">@kiril-p</div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/30 group-hover/link:text-blue-accent group-hover/link:translate-x-1 transition-all duration-300 flex-shrink-0">
          <line x1="7" y1="17" x2="17" y2="7"></line>
          <polyline points="7 7 17 7 17 17"></polyline>
        </svg>
      </MagneticButton>

      <!-- Itch.io with Magnetic Effect -->
      <MagneticButton
        client:visible
        href={itch}
        className="contact-link group/link w-full flex items-center gap-4 p-3 rounded-2xl bg-white/5 border border-white/10 hover:border-blue-accent/40 hover:bg-blue-accent/10 transition-all duration-300"
        strength={0.25}
        ariaLabel="Itch.io profile"
        title="Itch.io profile"
        target="_blank"
        rel="noopener noreferrer"
      >
        <div class="icon-wrapper flex items-center justify-center w-10 h-10 rounded-xl bg-blue-accent/10 group-hover/link:bg-blue-accent/20 transition-colors duration-300 flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-accent">
            <rect x="2" y="3" width="20" height="14" rx="2"></rect>
            <path d="M8 21h8"></path>
            <path d="M12 17v4"></path>
            <path d="m9 8 3 3 3-3"></path>
          </svg>
        </div>
        <div class="flex-1 text-left min-w-0">
          <div class="text-xs text-white/50 uppercase tracking-wider mb-1">Itch.io</div>
          <div class="text-sm text-white/90 group-hover/link:text-blue-accent transition-colors duration-300">Game Dev</div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/30 group-hover/link:text-blue-accent group-hover/link:translate-x-1 transition-all duration-300 flex-shrink-0">
          <line x1="7" y1="17" x2="17" y2="7"></line>
          <polyline points="7 7 17 7 17 17"></polyline>
        </svg>
      </MagneticButton>

      <!-- Resume - Opens PDF in new tab -->
      <a 
        href={resume}
        target="_blank"
        rel="noopener noreferrer"
        class="contact-link group/link w-full flex items-center gap-4 p-3 rounded-2xl bg-white/5 border border-white/10 hover:border-blue-accent/40 hover:bg-blue-accent/10 transition-all duration-300"
      >
        <div class="icon-wrapper flex items-center justify-center w-10 h-10 rounded-xl bg-blue-accent/10 group-hover/link:bg-blue-accent/20 transition-colors duration-300 flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-accent">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
        </div>
        <div class="flex-1 text-left min-w-0">
          <div class="text-xs text-white/50 uppercase tracking-wider mb-1">Resume</div>
          <div class="text-sm text-white/90 group-hover/link:text-blue-accent transition-colors duration-300">View CV</div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/30 group-hover/link:text-blue-accent group-hover/link:translate-x-1 transition-all duration-300 flex-shrink-0">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="7 10 12 15 17 10"></polyline>
          <line x1="12" y1="15" x2="12" y2="3"></line>
        </svg>
      </a>
    </div>
  </div>
</div>

<style>
  .contact-card:hover .gradient-overlay {
    opacity: 1;
  }

  .contact-card:hover .border-glow {
    opacity: 1;
  }

  .contact-link {
    cursor: pointer;
  }

  .copy-feedback.show {
    opacity: 1;
  }

  .copy-feedback {
    transition: opacity 0.3s ease;
  }

  button:focus {
    outline: none;
  }
</style>

<script>
  import { gsap } from 'gsap';

  // Magnetic effect for email button
  const emailBtn = document.querySelector('.email-magnetic');
  
  if (emailBtn) {
    emailBtn.addEventListener('mousemove', (e) => {
      const rect = emailBtn.getBoundingClientRect();
      const centerX = rect.left + rect.width / 2;
      const centerY = rect.top + rect.height / 2;
      
      const deltaX = (e.clientX - centerX) * 0.15;
      const deltaY = (e.clientY - centerY) * 0.15;

      gsap.to(emailBtn, {
        x: deltaX,
        y: deltaY,
        duration: 0.3,
        ease: 'power2.out',
      });
    });

    emailBtn.addEventListener('mouseleave', () => {
      gsap.to(emailBtn, {
        x: 0,
        y: 0,
        duration: 0.5,
        ease: 'elastic.out(1, 0.5)',
      });
    });
  }
</script>

<script>
  // Reset copy feedback after 2 seconds
  document.querySelectorAll('.contact-link button').forEach(button => {
    button.addEventListener('click', () => {
      const feedback = button.querySelector('.copy-feedback');
      if (feedback) {
        setTimeout(() => {
          feedback.classList.remove('show');
        }, 2000);
      }
    });
  });
</script>
